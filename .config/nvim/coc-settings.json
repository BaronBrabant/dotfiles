{
	"suggest.noselect": false,
	"diagnostic.errorSign": "âœ˜",
	"diagnostic.warningSign": "!",
	"diagnostic.infoSign": "?",
	"diagnostic.checkCurrentLine": true,
	"coc.preferences.formatOnSave": true,
	"inlayHint.enable": false,
	"languageserver": {
		"pyright": {
			"command": "pyright-langserver",
			"args": [
				"--stdio"
			],
			"filetypes": [
				"python"
			],
			"rootPatterns": [
				".git",
				"pyrightconfig.json"
			],
			"settings": {
				"python.analysis.typeCheckingMode": "basic",
				"typeCheckingMode": "off"
			}
		},
		"terraform": {
			"command": "terraform-ls",
			"args": [
				"serve"
			],
			"filetypes": [
				"terraform",
				"tf"
			],
			"initializationOptions": {},
			"settings": {}
		},
		"golang": {
			"command": "gopls",
			"rootPatterns": [
				"go.mod"
			],
			"filetypes": [
				"go"
			]
		},
		"flow": {
			"command": "flow",
			"args": [
				"lsp"
			],
			"filetypes": [
				"javascript",
				"javascriptreact"
			],
			"initializationOptions": {},
			"requireRootPattern": true,
			"settings": {},
			"rootPatterns": [
				".flowconfig"
			]
		},
		"erl": {
			"command": "erlang_ls",
			"filetypes": [
				"erl",
				"erlang"
			]
		}
	},
	"go.goplsOptions": {
		"staticcheck": true
	}
}
